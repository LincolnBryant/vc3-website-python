{%extends "loginbase.jinja2"%}

{%block title%}Profile{%endblock%}

{%block body%}

<div class="content container">
  <div class="container-fluid">
      <div class="row">
				{%if session.get('is_authenticated')%}

						<section id="user_profile">
						<!-- Profile Info Display -->
						<div class="container">
								<div class="row">
									 <div class="col-sm-6 col-md-6 col-lg-3">
									   <div class="thumbnail">
									     <img src="https://ca.slack-edge.com/T03MU5LDV-U4THGCSAX-ac1f81007040-1024" alt="">
									     <div class="caption">
									       <h3>{{session['name']}}</h3>
									       <h4>{{session['institution']}}</h4>
									       <h5>{{session['email']}}</h5>
									       <p><a href="#" class="btn btn-primary" role="button">Edit</a></p>
									     </div>
									   </div>
									 </div>

							<div class="col-md-6 col-md-3">
									   <form role="form" action="{{url_for('profile')}}" method="POST">
									     <div class="form-group">
									       <label for="name">Name</label>
									       <input
									         type="text"
									         class="form-control"
									         id="name"
									         name="name"
									         placeholder="full name"
									         required="required"
									         tabindex="1"
									         value="{{session['name']}}"
									       >
									     </div>

									     <div class="form-group">
									       <label for="email">Email</label>
									       <input
									         type="email"
									         id="email"
									         name="email"
									         class="form-control"
									         placeholder="me@example.com"
									         required="required"
									         tabindex="2"
									         value="{{session['email']}}"
									       >
									     </div>

									     <div class="form-group">
									       <label for="institution">Institution/Department</label>
									       <input
									         type="text"
									         id="institution"
									         name="institution"
									         class="form-control"
									         required="required"
									         tabindex="3"
									         value="{{session['institution']}}"
									       >
									     </div>

									     <div class="form-group">
									       <button type="submit" class="btn btn-primary">Save</button>
									     </div>
									   </form>
									 </div>

								</div> <!-- row -->
						</div> <!-- container -->
						</section>

					{% else %}
					<section id="user_profile">
									<div class="row">
									  <div class="col-md-6 col-md-offset-3">
									    <form role="form" action="{{url_for('profile')}}" method="POST">
									      <div class="form-group">
									        <label for="name">Name</label>
									        <input
									          type="text"
									          class="form-control"
									          id="name"
									          name="name"
									          placeholder="full name"
									          required="required"
									          tabindex="1"
									          value="{{session['name']}}"
									        >
									      </div>

									      <div class="form-group">
									        <label for="email">Email</label>
									        <input
									          type="email"
									          id="email"
									          name="email"
									          class="form-control"
									          placeholder="me@example.com"
									          required="required"
									          tabindex="2"
									          value="{{session['email']}}"
									        >
									      </div>

									      <div class="form-group">
									        <label for="institution">Institution/Department</label>
									        <input
									          type="text"
									          id="institution"
									          name="institution"
									          class="form-control"
									          required="required"
									          tabindex="3"
									          value="{{session['institution']}}"
									        >
									      </div>

									      <div class="form-group">
									        <button type="submit" class="btn btn-primary">Save</button>
									      </div>
									    </form>
									  </div>
									</div>
					</section>
					{%endif%}

        </div>
    </div>
</div>


{%endblock%}
