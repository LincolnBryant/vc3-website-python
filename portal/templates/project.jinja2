{%extends "loginbase.jinja2"%}

{%block title%}Project{%endblock%}

{%block body%}

				<div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-8 col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Projects</h4>
																<hr />

																<div class="row">
																	<div class="col-lg-8">
																		<div class="input-group">
																			<input type="text" class="form-control" placeholder="Search for...">
																			<span class="input-group-btn">
																				<button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
																			</span>
																		</div><!-- /input-group -->
																	</div><!-- /.col-lg-8 -->

																	<div class="col-lg-4">
																		<a href="{{url_for('new')}}" class="btn btn-primary btn-sm">+ New Project</a>
																	</div>
																</div><!-- /.row -->

                            </div>

                            <div class="content description">

														<form role="form" id="new-project-form" action="{{url_for('project')}}" method="POST">

												      <!-- Logo -->

												      <div class="col-lg-12 logo-vc3">
												          <img width="100" class="logo" src="https://image.ibb.co/e59s3v/logosmall.png" alt="Logo" />
												      </div>

												      <h3>Create a New Project</h3>
												      <h4>A project contains all the allocations and resource requests from your research</h4>

												      <fieldset>
												        <label for="name">Project Name</label>
												        <input
												          placeholder="Your Project name"
												          name="name"
												          type="text"
												          tabindex="1"
												          required
												          autofocus
																	value="{{request.name}}">
												      </fieldset>
												      <fieldset>
												        <label for="owner">Owner</label>
												        <input
												          placeholder="Name of Owner"
												          name="owner"
												          type="text"
												          tabindex="2"
												          required
												          autofocus
																	value="{{request.owner}}">
												      </fieldset>
												      <fieldset>
												        <label for="members">Project Members</label>
												        <input
												          placeholder="Member Names"
												          name="members"
												          type="text"
												          tabindex="3"
												          autofocus
																	value="{{request.members}}">
												      </fieldset>
												      <fieldset>
												        <button type="submit" id="create-project" data-submit="...Sending">Create Project</button>
												      </fieldset>
												    </form>

															<!-- <ul class=projects>
															{% for project in p %}
																<li><h2>{{ project.name }}</h2>{{ project.owner }}
															{% else %}
																<li><em>No projects here so far</em>
															{% endfor %}
															</ul> -->

                            </div><!-- /.content -->

                        </div>
                    </div>
								</div>

            </div>
        </div>

{%endblock%}
